<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/padre">

    <RelativeLayout
        android:id="@+id/hijo1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#FFEB3B"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/hijo2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/hijo1"
        android:background="#FF9800"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/hijo3"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/hijo1"
        android:background="#AFB42B">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hijo4"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/hijo3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#0097A7"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/hijo5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/hijo4"
        android:layout_toRightOf="@id/hijo4"
        android:background="#FFF59D"></RelativeLayout>
</RelativeLayout>